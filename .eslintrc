{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "ecmaFeatures": {
      "modules": false
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120, 2],
    "eqeqeq": [2, "allow-null"],
    "no-cond-assign": [2, "except-parens"],
    "react/jsx-curly-spacing": [1, "never"],
    "react/require-extension": [1, { "extensions": [".js"] }]
  }
}
